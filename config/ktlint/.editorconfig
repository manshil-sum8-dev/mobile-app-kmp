root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
# Disable wildcard imports
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999
# Android specific formatting
android = true
# KMP specific settings
multiplatform = true

# Import ordering rules
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,kotlinx.**,androidx.**,^

# Spacing
ij_kotlin_spaces_before_comma = false
ij_kotlin_spaces_after_comma = true

# Line breaks
ij_kotlin_keep_line_breaks = true
ij_kotlin_keep_blank_lines_in_declarations = 2
ij_kotlin_keep_blank_lines_in_code = 2
ij_kotlin_keep_blank_lines_before_right_brace = 2

# Parameter formatting
ij_kotlin_method_parameters_wrap = off
ij_kotlin_align_multiline_parameters = true
ij_kotlin_align_multiline_parameters_in_calls = false

# Chain call wrapping
ij_kotlin_method_call_chain_wrap = normal
ij_kotlin_assignment_wrap = normal

# Annotation formatting
ij_kotlin_line_comment_at_first_column = false
ij_kotlin_line_comment_add_space = true

[*.{md,txt}]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[gradlew]
end_of_line = lf

[gradlew.bat]
end_of_line = crlf